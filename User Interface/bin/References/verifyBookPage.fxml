<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="159.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <Label alignment="CENTER" style="-fx-background-color: #6799ff;" text="Book verification">
         <font>
            <Font size="18.0" />
         </font>
         <graphic>
            <ImageView fitHeight="35.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/verification.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
   </header>
   <content>
      <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" hgap="10.0" prefHeight="186.0" prefWidth="420.0">
         <children>
            <TextArea fx:id="text" editable="false" prefHeight="128.0" prefWidth="269.0" wrapText="true">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font>
            </TextArea>
            <Button mnemonicParsing="false" onAction="#book" prefHeight="25.0" prefWidth="76.0" style="-fx-background-color: #6799ff;" text="Book" />
         </children>
      </FlowPane>
   </content>
</DialogPane>
