                <TableColumn fx:id="idcol" prefWidth="108.0" text="EMPLOYEE_ID" />
                <TableColumn fx:id="namecol" prefWidth="120.0" text="EMPLOYEE_NAME" />
                  <TableColumn fx:id="jobcol" prefWidth="137.0" text="JOB_TITLE" />
                  <TableColumn fx:id="emailcol" prefWidth="103.0" text="EMAIL" />
                  <TableColumn fx:id="addresscol" prefWidth="120.0" text="ADDRESS" />
                  <TableColumn fx:id="phonecol" prefWidth="120.0" text="PHONE" />
              </columns>
            </TableView>
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <AnchorPane prefHeight="67.0" prefWidth="719.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="employeeId" layoutX="191.0" layoutY="14.0" promptText="Employee id" />
            <Button layoutX="475.0" layoutY="14.0" mnemonicParsing="false" onAction="#addEmployee" text="ADD" />
            <Label fx:id="alert" alignment="CENTER" layoutX="218.0" layoutY="39.0" prefHeight="27.0" prefWidth="283.0" textFill="#00a1ff">
